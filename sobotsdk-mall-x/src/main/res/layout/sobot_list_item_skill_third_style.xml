<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sobot_ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/sobot_iv_group_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/sobot_tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sobot_iv_group_img"
        android:textColor="@color/sobot_common_gray1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/sobot_iv_group_img" />

    <TextView
        android:id="@+id/sobot_tv_group_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sobot_tv_group_name"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/sobot_iv_group_img"
        android:textColor="@color/sobot_common_gray2"
        android:textSize="12sp"
        android:layout_toEndOf="@id/sobot_iv_group_img" />

</RelativeLayout>