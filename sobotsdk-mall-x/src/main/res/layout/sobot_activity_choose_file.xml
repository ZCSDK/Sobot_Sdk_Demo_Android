<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sobot_white"
    android:orientation="vertical">

    <include layout="@layout/sobot_layout_titlebar1" />

    <ListView
        android:id="@+id/sobot_lv_files"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbarThumbVertical="@drawable/sobot_custom_scroll_style" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/sobot_line_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/sobot_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/sobot_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/sobot_common_gray1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sobot_tv_send"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginLeft="15dp"
            android:background="@drawable/sobot_btn_normal_selector"
            android:enabled="false"
            android:gravity="center"
            android:textColor="@drawable/sobot_btn_text_selector"
            android:textSize="14sp"
            android:layout_marginStart="15dp" />

    </LinearLayout>
</LinearLayout>