        <activity
            android:name="com.sobot.chat.activity.SobotPostLeaveMsgActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|touchscreen|navigation|locale|fontScale|uiMode|screenLayout|smallestScreenSize"
            android:screenOrientation="behind"
            android:theme="@style/sobot_activity_def_theme" />

        <activity
            android:name=".widget.dialog.SobotRobotListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|touchscreen|navigation|locale|fontScale|uiMode|screenLayout|smallestScreenSize"
            android:theme="@style/sobot_AppThemeDialogIsTranslucent" />

        <activity
            android:name=".widget.dialog.SobotReplyActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|touchscreen|navigation|locale|fontScale|uiMode|screenLayout|smallestScreenSize"
            android:theme="@style/sobot_AppThemeDialogIsTranslucent" />

        <activity
            android:name=".widget.dialog.SobotTicketEvaluateActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|touchscreen|navigation|locale|fontScale|uiMode|screenLayout|smallestScreenSize"
            android:theme="@style/sobot_AppThemeDialogIsTranslucent" />

        <activity
