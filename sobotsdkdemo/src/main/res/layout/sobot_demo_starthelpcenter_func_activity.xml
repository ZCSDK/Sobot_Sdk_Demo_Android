<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sobot_white"
    android:orientation="vertical">

    <include
        android:id="@+id/sobot_demo_titlebar"
        layout="@layout/sobot_demo_layout_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.4.3.1 客服电话"
            android:textColor="@color/sobot_common_gray1"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="[说明:客服电话按钮文案和对应的电话都有值客户服务中心页面底部显示拨打电话按钮，点击可直接电话联系客服]"
            android:textColor="@color/sobot_common_gray1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/sobot_et_phone_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/sobot_editview_stocke_bg"
            android:hint="客服电话按钮显示文案"
            android:padding="6dp"
            android:scrollbars="none"
            android:textColor="@color/sobot_common_gray1"
            android:textColorHint="@color/sobot_common_gray3"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/sobot_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/sobot_editview_stocke_bg"
            android:hint="客服电话按钮对应号码 例如：400-100000"
            android:padding="6dp"
            android:scrollbars="none"
            android:textColor="@color/sobot_common_gray1"
            android:textColorHint="@color/sobot_common_gray3"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/sobot_common_gray2"
        android:padding="6dp"
        android:text="参考文档"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_start_fun_3_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/sobot_common_blue"
        android:textSize="14sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/sobot_common_gray1" />


    <TextView
        android:id="@+id/sobot_tv_start"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sobot_btn_bg_help_center"
        android:gravity="center"
        android:padding="6dp"
        android:text="启动客户服务中心"
        android:textColor="@color/sobot_common_gray1"
        android:textSize="16sp" />

</LinearLayout>