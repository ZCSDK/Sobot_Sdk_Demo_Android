<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/work_order_category_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/sobot_common_gray6"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/work_order_category_title"
            style="?android:attr/textViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/sobot_common_gray1"
            android:textSize="@dimen/sobot_text_font_small"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="20dp" />

        <ImageView
            android:id="@+id/work_order_category_ishave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/sobot_work_order_selected_mark"
            android:contentDescription="@null"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>

    <View
        android:id="@+id/work_order_category_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sobot_line_height_0_4_dp"
        android:layout_marginBottom="@dimen/sobot_line_height_0_4_dp"
        android:background="@color/sobot_line_1dp" />

</LinearLayout>